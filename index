<script>
const API = "https://api.aladhan.com/v1/timingsByCity?city=Casablanca&country=Morocco&method=21";

async function loadPrayerTimes(){
    try{
        const res = await fetch(API);
        const data = await res.json();

        const timings = data.data.timings;

        document.getElementById("fajr").innerText = timings.Fajr.split(" ")[0];
        document.getElementById("maghrib").innerText = timings.Maghrib.split(" ")[0];

        const today = data.data.date.gregorian.date;
        document.getElementById("date").innerText = today + " — Ramadan";
    }catch(e){
        document.getElementById("date").innerText = "Erreur chargement horaires";
    }
}

loadPrayerTimes();
setInterval(loadPrayerTimes, 3600000);
</script>

